extends layout
block content
  .section.is-medium(style='height: 638px;')
    div(style='text-align: center;')
      p.subtitle.is-3 Create account
    form(action='http://localhost:8000/user/signUp' method='post')
      .field
        label.label Name
        p.control.has-icons-left
          input.input(type='text' name="name"  id="name" placeholder='Name')
          span.icon.is-small.is-left
            i.fas.fa-user
      .field
        label.label Email
        p.control.has-icons-left
          input.input(type='email' name="email" id="email" placeholder='Email input' value='hello@')
          span.icon.is-small.is-left
            i.fas.fa-envelope
      .field
        label.label Password
        p.control.has-icons-left
          input.input(type='password' name="password" id="password" placeholder='Password')
          span.icon.is-small.is-left
            i.fas.fa-lock
      .control.mt-5(style='text-align: center; ')
        button.button.is-info.is-rounded(style='width: 200px;') Submit
        div
          p
            | Do you have an account? 
            a(href='') Sing In
